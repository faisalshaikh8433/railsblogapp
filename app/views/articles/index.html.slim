h2 List of Articles
table.table.table-bordered.table-hover
	thead
		tr
			td.text-center Title
			td.text-center Body
			td.text-center Date
			td
			td
			td	
	tbody	
		- @articles.each do |article| 
				tr
					td.text-center = article.title 
					td.text-center = article.body
					td.text-center = article.ddiff_date
					td.text-center = link_to 'Show', article_path(article), {:class=>'btn btn-info'}
					td.text-center = link_to 'Edit', edit_article_path(article), {:class=>'btn btn-warning'}
					td.text-center = link_to 'Delete', article_path(article),
											method: :delete,
											data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'
	